{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "sourceMap": true,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ],
      "Views/*": [
        "./resources/views/*"
      ],
      "Components/*": [
        "./resources/components/*"
      ],
      "Layouts/*": [
        "./resources/layouts/*"
      ],
      "resources/*": [
        "./resources/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@adonisjs/session",
      "@adonisjs/view",
      "@adonisjs/shield",
      "@japa/preset-adonis/build/adonis-typings",
      "@microeinhundert/radonis-server",
      "@adonisjs/i18n",
      "@adonisjs/ally",
      "@adonisjs/lucid"
    ],
    "jsx": "react-jsx"
  }
}